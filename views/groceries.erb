<h1>Grocery List</h1>

<ul id="grocery-list">
  <% @groceries.each do |item| %>
    <li class="item">
      <%= item['name'] %>
      <form action="/groceries/jsdelete/<%= item["id"] %>" method="post" class="delete_form">
        <input type="hidden" name="_method" value="DELETE"</input>
        <input type="submit" value="Delete" id="<%= item["id"] %>"></input>
      </form>
    </li>
  <% end %>
</ul>

<form method="post" action="/groceries" id="grocery-form">
  <label for="grocery-name">Name</label>
  <input type="text" name="name" id="grocery-name">
  <input type="submit" value="Add">
</form>
